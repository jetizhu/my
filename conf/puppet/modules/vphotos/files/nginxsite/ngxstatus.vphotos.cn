server {
        listen 80 ;

        root /usr/share/nginx/html;
        index index.html index.htm;

        server_name ngxstatus.vphotos.cn;
	#add_header Cache-Control max-age=300;
	
        location /ngx_status {
		stub_status on;
                access_log off;
		allow 127.0.0.1;
		allow 10.0.0.0/8;
		deny all;
        }


	location /hacheck {
		echo "ok";
		access_log off;
	}

}

